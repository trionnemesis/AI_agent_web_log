# OpenSearch 連線設定
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_SSL=false
OPENSEARCH_VERIFY_CERTS=false

# OpenSearch 索引名稱
OPENSEARCH_LOGS_INDEX=logs-alerts
OPENSEARCH_CASES_INDEX=analysis-cases

# Gemini API 設定
GEMINI_API_KEY=your-gemini-api-key-here

# LLM 模型設定
LMS_LLM_MODEL_NAME=gemini-1.5-flash-latest

# 嵌入模型設定
EMBEDDING_MODEL_NAME=paraphrase-multilingual-MiniLM-L12-v2

# 向量搜尋設定
VECTOR_SEARCH_K=5
VECTOR_MIN_SCORE=0.0
CASE_QUALITY_THRESHOLD=0.8

# 批次處理設定
OPENSEARCH_BATCH_SIZE=100
LOG_FETCH_INTERVAL=60

# 日誌處理設定
LMS_TARGET_LOG_DIR=/var/log/LMS_LOG
LMS_ANALYSIS_OUTPUT_FILE=/var/log/analyzer_results.json
LMS_OPERATIONAL_LOG_FILE=./logs/analyzer_script.log

# 取樣與成本控制
LMS_SAMPLE_TOP_PERCENT=20
LMS_LLM_BATCH_SIZE=10
LMS_MAX_HOURLY_COST_USD=5.0
LMS_PRICE_IN_PER_1K_TOKENS=0.000125
LMS_PRICE_OUT_PER_1K_TOKENS=0.000375

# 相似度閾值
LMS_SIM_T_ATTACK_L2_THRESHOLD=0.3
LMS_SIM_N_NORMAL_L2_THRESHOLD=0.2

# 重試設定
LMS_RETRY_MAX_ATTEMPTS=3
LMS_RETRY_INITIAL_DELAY=1.0
LMS_RETRY_BACKOFF_FACTOR=2.0
LMS_RETRY_MAX_DELAY=30.0

# Wazuh API 設定（可選）
WAZUH_API_URL=
WAZUH_API_USER=
WAZUH_API_PASSWORD=
WAZUH_ALERTS_FILE=
WAZUH_ALERTS_URL=

# Filebeat HTTP 伺服器設定
FILEBEAT_HOST=0.0.0.0
FILEBEAT_PORT=9000 